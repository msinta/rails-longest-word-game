<h1>
New Game
</h1>

<h2><%=@letters%></h2>

<p>What's the longest word your can find? </p>
 <form action="/score" method="get" method="post">
    <input type="text" name="word" value="<%= params[:word] %>" placeholder = "Enter Your Word">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <%= hidden_field_tag :start_time, Time.now %>
    <input type="submit" class="btn btn-primary" value="Submit">

  </form>
